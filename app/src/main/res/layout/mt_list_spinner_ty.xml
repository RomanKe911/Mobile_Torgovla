<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foregroundGravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvw_ty_title1"
            style="@style/spinner_ty"
            android:text="ТУ= "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/tvw_ty_skidka"
            style="@style/spinner_ty"
            android:text='4'
            android:textColor="#F30F0F"
            app:layout_constraintBottom_toBottomOf="@+id/tvw_ty_title1"
            app:layout_constraintStart_toEndOf="@+id/tvw_ty_title1"
            app:layout_constraintTop_toTopOf="@+id/tvw_ty_title1"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/tvw_ty_title4"
            style="@style/spinner_ty"
            android:text="c"
            app:layout_constraintBottom_toBottomOf="@+id/tvw_ty_summa"
            app:layout_constraintStart_toEndOf="@+id/tvw_ty_summa"
            app:layout_constraintTop_toTopOf="@+id/tvw_ty_summa" />

        <TextView
            android:id="@+id/tvw_ty_title3"
            style="@style/spinner_ty"
            android:text="мин. сумма закупа"
            app:layout_constraintBottom_toBottomOf="@+id/tvw_ty_title2"
            app:layout_constraintStart_toEndOf="@+id/tvw_ty_title2"
            app:layout_constraintTop_toTopOf="@+id/tvw_ty_title2" />

        <TextView
            android:id="@+id/tvw_ty_summa"
            style="@style/spinner_ty"
            android:text="1500"
            android:textColor="#F30F0F"
            app:layout_constraintBottom_toBottomOf="@+id/tvw_ty_title3"
            app:layout_constraintStart_toEndOf="@+id/tvw_ty_title3"
            app:layout_constraintTop_toTopOf="@+id/tvw_ty_title3" />

        <TextView
            android:id="@+id/tvw_ty_title2"
            style="@style/spinner_ty"
            android:layout_marginStart="4dp"
            android:text="%"
            app:layout_constraintBottom_toBottomOf="@+id/tvw_ty_skidka"
            app:layout_constraintStart_toEndOf="@+id/tvw_ty_skidka"
            app:layout_constraintTop_toTopOf="@+id/tvw_ty_skidka"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>