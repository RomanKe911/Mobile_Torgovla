<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_image"
    android:orientation="vertical"
    android:padding="3dp">


    <TextView
        android:id="@+id/textView_forma_name"
        style="@style/style_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="Bella Perfecta Ultra Rose 10+2шт \nбелая серия" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textView_forma_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="3dp"
            android:background="@drawable/back_image"
            android:padding="4dp"
            android:src="@drawable/bella_perfecta_10_rose" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center_horizontal|left|center_vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/textView_Title1"
                style="@style/style_text"
                android:layout_marginTop="5dp"
                android:text="Цена:" />


            <TextView
                android:id="@+id/textView_Title2"
                style="@style/style_text"
                android:layout_below="@+id/textView_Title1"
                android:layout_marginTop="5dp"
                android:text="Цена(ТУ):" />

            <TextView
                android:id="@+id/textView_Title3"
                style="@style/style_text"
                android:layout_below="@+id/textView_Title2"
                android:layout_marginTop="5dp"
                android:text="Остаток:" />

            <TextView
                android:id="@+id/textView_Title4"
                style="@style/style_text"
                android:layout_below="@+id/textView_Title3"
                android:layout_marginTop="5dp"
                android:text="Кол-во в кор.:" />

            <TextView
                android:id="@+id/textView_forma_cena"
                style="@style/style_product"
                android:layout_alignBottom="@+id/textView_Title1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView_Title1"
                android:text="73.00" />

            <TextView
                android:id="@+id/textView_forma_cenanal"
                style="@style/style_product"
                android:layout_alignBottom="@+id/textView_Title2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView_Title2"
                android:text="70.08" />

            <TextView
                android:id="@+id/textView_forma_ostatok"
                style="@style/style_product_2"
                android:layout_alignBottom="@+id/textView_Title3"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView_Title3"
                android:text="120шт" />

            <TextView
                android:id="@+id/textView_forma_kolbox"
                style="@style/style_product"
                android:layout_alignBottom="@+id/textView_Title4"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView_Title4"
                android:text="36шт" />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="2dp"
        tools:layout_editor_absoluteX="341dp">


        <TextView
            android:id="@+id/textView_forma_kod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_Strih"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            android:textColor="@color/kod_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_Strih"
            style="@style/style_text"
            android:text="Штрих-код:" />

        <TextView
            android:id="@+id/textView_forma_strih"
            style="@style/style_product"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/textView_Strih"
            android:layout_alignBottom="@+id/textView_Strih"
            android:layout_marginLeft="5dp"
            android:text="1234567891234" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_uid_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2945A3F6-6312-4E36-842B-D525FBB25E4B"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_UID_Sklad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_Name_Sklad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>