<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_ftpImage_ConstraintLayoutProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView104"
        app:layout_constraintVertical_bias="0.0">

        <ProgressBar
            android:id="@+id/list_ftpImage_ProgressBarHorisont"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/list_ftpImage_ProgressBarCircle"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            app:layout_constraintBottom_toTopOf="@+id/list_ftpImage_ProgressBarHorisont"
            app:layout_constraintEnd_toEndOf="@+id/list_ftpImage_ProgressBarHorisont"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/list_ftpImage_textProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/100"
            app:layout_constraintBottom_toBottomOf="@+id/list_ftpImage_ProgressBarCircle"
            app:layout_constraintEnd_toEndOf="@+id/list_ftpImage_ProgressBarCircle"
            app:layout_constraintStart_toStartOf="@+id/list_ftpImage_ProgressBarCircle"
            app:layout_constraintTop_toTopOf="@+id/list_ftpImage_ProgressBarCircle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/list_ftpImage_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/selector_button_ftp_download"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_ftpImage_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_menu_bella" />

    <TextView
        android:id="@+id/list_ftpImage_textBrends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Наименование бренда"
        app:layout_constraintEnd_toStartOf="@+id/list_ftpImage_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/list_ftpImage_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_ftpImage_text_FilesSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="общий размер"
        app:layout_constraintBottom_toBottomOf="@+id/textView106"
        app:layout_constraintStart_toEndOf="@+id/textView106"
        app:layout_constraintTop_toTopOf="@+id/textView106" />

    <TextView
        android:id="@+id/list_ftpImage_textFilesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="ск фал"
        app:layout_constraintBottom_toBottomOf="@+id/textView105"
        app:layout_constraintStart_toEndOf="@+id/textView105"
        app:layout_constraintTop_toTopOf="@+id/textView105" />

    <TextView
        android:id="@+id/list_ftpImage_textDateUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="дата посл обнов"
        app:layout_constraintBottom_toBottomOf="@+id/list_ftpImage_image"
        app:layout_constraintStart_toEndOf="@+id/list_ftpImage_image"
        app:layout_constraintTop_toBottomOf="@+id/textView106" />

    <TextView
        android:id="@+id/list_ftpImage_textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView104"
        app:layout_constraintStart_toEndOf="@+id/textView104"
        app:layout_constraintTop_toTopOf="@+id/textView104" />

    <TextView
        android:id="@+id/textView104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Статус обновление:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_ftpImage_image" />

    <TextView
        android:id="@+id/textView105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="9dp"
        android:text="кол-во файлов:"
        app:layout_constraintBottom_toTopOf="@+id/textView106"
        app:layout_constraintStart_toEndOf="@+id/list_ftpImage_image"
        app:layout_constraintTop_toBottomOf="@+id/list_ftpImage_textBrends" />

    <TextView
        android:id="@+id/textView106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="общий размер:"
        app:layout_constraintStart_toStartOf="@+id/textView105"
        app:layout_constraintTop_toBottomOf="@+id/textView105" />
</androidx.constraintlayout.widget.ConstraintLayout>