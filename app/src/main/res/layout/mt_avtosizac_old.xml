<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MT_Layout_Background"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/back_image"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp">

        <TextView
            android:layout_below="@+id/tvw_aut_title_2"
            android:id="@+id/tvw_aut_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvw_aut_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_aut_title_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvw_aut_title_1"
            android:text="A8BA1F48-C7E1-497B-B74A-D86426684712"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvw_aut_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Доступ:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvw_aut_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_aut_title_2"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvw_aut_title_2"
            android:text="TextView"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/user_lock" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInput"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editText"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="7"
                android:gravity="center_vertical|center_horizontal"
                android:hint="пароль"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>



        <ImageView
            android:id="@+id/imageViewVISIBLE_AUT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/TextInput"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/TextInput"
            app:srcCompat="@drawable/user_preview_down" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_aut"
            android:layout_alignLeft="@+id/button_aut"
            android:layout_alignRight="@+id/button_aut"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Авторизация"
            android:textSize="12sp" />
        <Button
            android:id="@+id/button_aut"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_button_next_forma"
            android:padding="10dp" />
    </RelativeLayout>


</LinearLayout>