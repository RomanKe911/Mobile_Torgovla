<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView_ost"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:background="@drawable/back_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvw_G_ost_name"
        app:srcCompat="@drawable/bella_perfecta_10_rose" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_ost"
        app:layout_constraintTop_toBottomOf="@+id/tvw_G_ost_name">

        <TextView
            android:id="@+id/tvw_G_ost_brends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Группа:"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_title_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_title_cena"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Остаток:"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_title_cena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_G_ost_brends"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Цена:"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvw_G_ost_sklad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_title_count"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Склад:"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvw_G_ost_brends_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvw_G_ost_ostatok_count"
            android:layout_alignBottom="@+id/tvw_G_ost_brends"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/tvw_G_ost_brends"
            android:text="Bella"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvw_G_ost_ostatok_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_title_count"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView_title_count"
            android:text="12шт"
            android:textColor="@color/colors_ostatok_small"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvw_G_ost_cena_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvw_G_ost_brends_count"
            android:layout_alignBottom="@+id/textView_title_cena"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/textView_title_cena"
            android:text="12с"
            android:textColor="@color/colors_ostatok_large"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tvw_G_ost_sklad_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvw_G_ost_ostatok_count"
            android:layout_alignBottom="@id/tvw_G_ost_sklad"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/tvw_G_ost_sklad"
            android:text="Основной"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvw_G_ost_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:text="Bella Perfecta"
        android:textColor="@color/colorblack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>