<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardTovatRecyclear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_image"
    android:orientation="vertical"
    android:padding="3dp">


    <ImageView
        android:id="@+id/textView_forma_image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_margin="3dp"
        android:background="@drawable/back_image"
        android:padding="4dp"
        android:src="@drawable/bella_perfecta_10_rose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_forma_name" />

    <TextView
        android:id="@+id/textView_forma_name"
        style="@style/style_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="Bella Perfecta Ultra Rose 10+2шт \nбелая серия"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_forma_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView_forma_image"
        app:layout_constraintTop_toTopOf="@+id/textView_forma_image"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView_forma_cena"
            style="@style/style_product"
            android:layout_marginStart="4dp"
            android:text="73.00"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title1"
            app:layout_constraintStart_toEndOf="@+id/textView_Title1"
            app:layout_constraintTop_toTopOf="@+id/textView_Title1" />

        <TextView
            android:id="@+id/textView_forma_ostatok"
            style="@style/style_product"
            android:layout_marginStart="4dp"
            android:text="120шт"
            android:textColor="#43A047"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title3"
            app:layout_constraintStart_toEndOf="@+id/textView_Title3"
            app:layout_constraintTop_toTopOf="@+id/textView_Title3" />

        <TextView
            android:id="@+id/textView_Title1"
            style="@style/style_text"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:text="Цена:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_forma_cenanal"
            style="@style/style_product"
            android:layout_marginStart="4dp"
            android:text="70.08"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title2"
            app:layout_constraintStart_toEndOf="@+id/textView_Title2"
            app:layout_constraintTop_toTopOf="@+id/textView_Title2" />

        <TextView
            android:id="@+id/textView_forma_kolbox"
            style="@style/style_product"
            android:layout_marginStart="4dp"
            android:text="36шт"
            android:textColor="@color/kod_color"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title4"
            app:layout_constraintStart_toEndOf="@+id/textView_Title4"
            app:layout_constraintTop_toTopOf="@+id/textView_Title4" />

        <TextView
            android:id="@+id/textView_Title2"
            style="@style/style_text"
            android:layout_marginTop="4dp"
            android:text="Цена(ТУ):"
            app:layout_constraintStart_toStartOf="@+id/textView_Title1"
            app:layout_constraintTop_toBottomOf="@+id/textView_Title1" />

        <TextView
            android:id="@+id/textView_Title4"
            style="@style/style_text"
            android:layout_marginTop="4dp"
            android:text="Кол-во в кор.:"
            app:layout_constraintStart_toStartOf="@+id/textView_Title3"
            app:layout_constraintTop_toBottomOf="@+id/textView_Title3" />

        <TextView
            android:id="@+id/textView_Title3"
            style="@style/style_text"
            android:layout_marginTop="4dp"
            android:text="Остаток:"
            app:layout_constraintStart_toStartOf="@+id/textView_Title2"
            app:layout_constraintTop_toBottomOf="@+id/textView_Title2" />

        <TextView
            android:id="@+id/textView_Strih"
            style="@style/style_text"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Штрих-код:"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView_Title4"
            app:layout_constraintTop_toBottomOf="@+id/textView_Title4" />

        <TextView
            android:id="@+id/textView_forma_strih"
            style="@style/style_product"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="1234567891234"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView_Strih"
            app:layout_constraintTop_toBottomOf="@+id/textView_Strih" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Strih">

        <TextView
            android:id="@+id/text_nom_title_kod_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:text="код univ:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_nom_title_kod_sklad" />

        <TextView
            android:id="@+id/text_nom_title_kod_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="код uid:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_nom_title_kod_univ" />

        <TextView
            android:id="@+id/text_nom_title_kod_sklad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:text="код склада:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_nom_title_name_sklad" />

        <TextView
            android:id="@+id/textView_forma_kod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/text_nom_title_kod_univ"
            app:layout_constraintStart_toEndOf="@+id/text_nom_title_kod_univ"
            app:layout_constraintTop_toTopOf="@+id/text_nom_title_kod_univ" />

        <TextView
            android:id="@+id/textView_UID_Sklad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/text_nom_title_kod_sklad"
            app:layout_constraintStart_toEndOf="@+id/text_nom_title_kod_sklad"
            app:layout_constraintTop_toTopOf="@+id/text_nom_title_kod_sklad" />

        <TextView
            android:id="@+id/text_uid_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:hint="2945A3F6-6312-4E36-842B-D525FBB25E4B"
            app:layout_constraintBottom_toBottomOf="@+id/text_nom_title_kod_uid"
            app:layout_constraintStart_toEndOf="@+id/text_nom_title_kod_uid"
            app:layout_constraintTop_toTopOf="@+id/text_nom_title_kod_uid" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_Name_Sklad"
        style="@style/style_product"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="@color/dramers_colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_nom_title_name_sklad"
        app:layout_constraintStart_toEndOf="@+id/text_nom_title_name_sklad"
        app:layout_constraintTop_toTopOf="@+id/text_nom_title_name_sklad" />

    <TextView
        android:id="@+id/text_nom_title_name_sklad"
        style="@style/style_text"
        android:layout_marginStart="48dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:text="Склад:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_forma_image"
        app:layout_constraintTop_toBottomOf="@+id/textView_forma_image" />

</androidx.constraintlayout.widget.ConstraintLayout>