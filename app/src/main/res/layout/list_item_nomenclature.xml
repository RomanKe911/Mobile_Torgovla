<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_image"
    android:orientation="horizontal"
    android:padding="3dp">


    <ImageView
        android:id="@+id/textView_forma_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/back_image"
        android:padding="2dp"
        android:src="@drawable/bella_perfecta_10_rose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_forma_name"
        style="@style/style_title"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Bella Perfecta Ultra Rose 10+2шт \nбелая серия"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_forma_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_forma_name">

        <TextView
            android:id="@+id/textView_ostatki_all"
            style="@style/style_product_2"
            android:layout_marginStart="4dp"
            android:text="Закончился"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title5"
            app:layout_constraintStart_toEndOf="@+id/textView_Title5"
            app:layout_constraintTop_toTopOf="@+id/textView_Title5" />

        <TextView
            android:id="@+id/textView_Title1"
            style="@style/style_text"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Цена:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_forma_cenanal"
            style="@style/style_product"
            android:layout_marginStart="4dp"
            android:text="70.08"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title2"
            app:layout_constraintStart_toEndOf="@+id/textView_Title2"
            app:layout_constraintTop_toTopOf="@+id/textView_Title2" />

        <TextView
            android:id="@+id/textView_forma_kolbox"
            style="@style/style_product"
            android:layout_marginStart="4dp"
            android:text="36"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title4"
            app:layout_constraintStart_toEndOf="@+id/textView_Title4"
            app:layout_constraintTop_toTopOf="@+id/textView_Title4" />

        <TextView
            android:id="@+id/textView_Title4"
            style="@style/style_text"
            android:layout_marginStart="8dp"
            android:text="Кол-во в кор.:"
            app:layout_constraintBottom_toTopOf="@+id/textView_forma_cenanal"
            app:layout_constraintStart_toEndOf="@+id/textView_forma_cenanal"
            app:layout_constraintTop_toTopOf="@+id/textView_forma_cena" />

        <TextView
            android:id="@+id/textView_Title5"
            style="@style/style_text"
            android:text="Остаток:"
            app:layout_constraintBottom_toBottomOf="@+id/textView_forma_cenanal"
            app:layout_constraintStart_toStartOf="@+id/textView_Title4"
            app:layout_constraintTop_toTopOf="@+id/textView_forma_cenanal" />

        <TextView
            android:id="@+id/textView_forma_cena"
            style="@style/style_product"
            android:text="73.00"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Title1"
            app:layout_constraintStart_toStartOf="@+id/textView_forma_cenanal"
            app:layout_constraintTop_toTopOf="@+id/textView_Title1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_Title2"
            style="@style/style_text"
            android:layout_marginTop="4dp"
            android:text="Цена(нал.):"
            app:layout_constraintStart_toStartOf="@+id/textView_Title1"
            app:layout_constraintTop_toBottomOf="@+id/textView_Title1" />

        <TextView
            android:id="@+id/textView_Strih"
            style="@style/style_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Штрих-код:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Title2" />

        <TextView
            android:id="@+id/textView_forma_strih"
            style="@style/style_product"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="4dp"
            android:text="1234567891234"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Strih"
            app:layout_constraintStart_toEndOf="@+id/textView_Strih"
            app:layout_constraintTop_toTopOf="@+id/textView_Strih" />

        <TextView
            android:id="@+id/textView_forma_kod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_Strih"
            android:layout_alignLeft="@+id/textView_forma_strih"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textColor="@color/kod_color"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Strih"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>