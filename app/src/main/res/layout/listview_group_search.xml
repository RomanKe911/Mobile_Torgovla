<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_brends"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bella_perfecta_10_rose" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/img_brends"
        app:layout_constraintTop_toBottomOf="@+id/tvw_G_ost_name">

        <TextView
            android:id="@+id/tvw_T1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бренд:" />

        <TextView
            android:id="@+id/tvw_T2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T1"
            android:text="Группа:" />

        <TextView
            android:id="@+id/tvw_T3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T2"
            android:text="Код:" />

        <TextView
            android:id="@+id/tvw_T4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T3"
            android:text="Кол-во в кор:" />

        <TextView
            android:id="@+id/tvw_T5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T4"
            android:text="Цена:" />

        <TextView
            android:id="@+id/tvw_T6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T5"
            android:text="Штрих-код:" />

        <TextView
            android:id="@+id/tvw_T7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T6"
            android:text="Код UNIV:" />

        <TextView
            android:id="@+id/tvw_T8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvw_T7"
            android:text="Код UID" />


        <TextView
            android:id="@+id/tvw_NT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T1"
            android:text="Бренд:" />

        <TextView
            android:id="@+id/tvw_NT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T2"
            android:text="Группа:" />

        <TextView
            android:id="@+id/tvw_NT3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T3"
            android:text="Код:" />

        <TextView
            android:id="@+id/tvw_NT4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T4"
            android:text="Кол-во в кор:" />

        <TextView
            android:id="@+id/tvw_NT5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T5"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T5"
            android:text="Цена:" />

        <TextView
            android:id="@+id/tvw_NT6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T6"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T6"
            android:text="Штрих-код:" />

        <TextView
            android:id="@+id/tvw_NT7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T7"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T7"
            android:text="Код UNIV:" />

        <TextView
            android:id="@+id/tvw_NT8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvw_T8"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvw_T8"
            android:text="Код UID" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvw_G_ost_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Bella Perfecta"
        android:textColor="@color/colorblack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>