<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list_view_with_checkbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/list_select_all"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/list_select_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select All"
        app:layout_constraintBottom_toTopOf="@+id/list_select_none" />

    <Button
        android:id="@+id/list_select_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select None"
        app:layout_constraintBottom_toTopOf="@+id/list_select_reverse" />

    <Button
        android:id="@+id/list_select_reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reverse Select"
        app:layout_constraintBottom_toTopOf="@+id/list_remove_selected_rows" />

    <Button
        android:id="@+id/list_remove_selected_rows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Selected Rows"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>