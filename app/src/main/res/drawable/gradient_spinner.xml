<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="8dp" />
                    <gradient
                        android:angle="90"
                        android:endColor="#B3BBCC"
                        android:startColor="#E8EBEF"
                        android:type="linear" />
                    <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#5C5C5C" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>